<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_date"
        style="@style/MyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_chat_date"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/speech_bubble_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_name_left"
                style="@style/MyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="4dp"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                tools:text="NAME" />

            <LinearLayout
                android:id="@+id/ll_msg_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_chat_bubble_left"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_msg_left"
                    style="@style/MyTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="12"
                    android:padding="10dp"
                    tools:text="MESSAGE" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_time_left"
                style="@style/MyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ll_msg_left"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/ll_msg_left"
                android:maxLines="1"
                android:textSize="12sp"
                tools:text="TIME" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/speech_bubble_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end">

            <LinearLayout
                android:id="@+id/ll_msg_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_chat_bubble_right"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_msg_right"
                    style="@style/MyTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:maxEms="11"
                    tools:text="MESSAGE" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_time_right"
                style="@style/MyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ll_msg_right"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/ll_msg_right"
                android:maxLines="1"
                android:textSize="12sp"
                tools:text="TIME" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>